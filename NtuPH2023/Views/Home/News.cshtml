@model IEnumerable<NtuPH2023.Models.TblNews>
@{
    ViewData["Title"] = "新聞報導";
}

<div class="container text-center">
    <div class="row row-cols-1 g-2">
        @foreach (var comment in Model)
        {
            <div class="col text-break">
                <div class="p-3">@Html.Raw(comment.HtmlContent)</div>
            </div>
        }
    </div>
</div>