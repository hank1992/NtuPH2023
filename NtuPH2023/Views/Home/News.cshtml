@model IEnumerable<NtuPH2023.Models.TblNews>
@{
    ViewData["Title"] = "新聞報導";
}

<div class="container text-center">
    <div class="row row-cols-1 row-cols-lg-2 g-2 g-lg-3">
        @foreach (var comment in Model)
        {
            <div class="col">
                <div class="p-3">@Html.Raw(comment.HtmlContent)</div>
            </div>
        }
    </div>
</div>